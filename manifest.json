{
  "manifest_version": 3,
  "name": "Auto Clocker",
  "version": "2.0",
  "description": "Waits for a specific time, clicks, and sends a phone notification.",
  "permissions": [
    "storage",
    "alarms",
    "tabs"
  ],
  "host_permissions": [
    "https://ntfy.sh/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-inactive-16.png", 
      "48": "icons/icon-inactive-48.png",
      "128": "icons/icon-inactive-128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://desk-booking-system.bettercollective.rocks/*"
      ],
      "js": ["content.js"]
    }
  ]
}